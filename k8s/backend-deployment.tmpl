apiVersion: apps/v1
kind: Deployment
metadata:
  name: manhattan-backend
  labels:
    app: backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: backend
  template:
    metadata:
      labels:
        app: backend
    spec:
      containers:
      - name: backend-container
        image: ${IMAGE_URL}
        ports:
        - containerPort: 8080
        env:
        # --- Database Configuration (from your-database-secret) ---
        - name: SPRING_DATASOURCE_URL
          valueFrom:
            secretKeyRef:
              name: your-database-secret
              key: SPRING_DATASOURCE_URL
        - name: SPRING_DATASOURCE_USERNAME
          valueFrom:
            secretKeyRef:
              name: your-database-secret
              key: SPRING_DATASOURCE_USERNAME
        - name: SPRING_DATASOURCE_PASSWORD
          valueFrom:
            secretKeyRef:
              name: your-database-secret
              key: SPRING_DATASOURCE_PASSWORD
        - name: SPRING_DATASOURCE_DRIVER_CLASS_NAME
          value: "org.postgresql.Driver"

        # --- OpenWeather API Key ---
        - name: OPENWEATHER_API_KEY
          valueFrom:
            secretKeyRef:
              name: openweather-api-key-secret
              key: OPENWEATHER_API_KEY

        # --- Admin credentials (new) ---
        - name: ADMIN_USERNAME
          valueFrom:
            secretKeyRef:
              name: admin-credentials
              key: ADMIN_USERNAME
        - name: ADMIN_PASSWORD_HASH
          valueFrom:
            secretKeyRef:
              name: admin-credentials
              key: ADMIN_PASSWORD_HASH

        # === ML Predict URL (was pointing at external LB) ===
        - name: ML_PREDICT_URL
          value: "http://data-analytics-service:8080/predict_batch"
